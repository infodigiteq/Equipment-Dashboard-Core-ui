# Equipment Dashboard Core UI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to use hardcoded data instead of Supabase
VITE_USE_HARDCODED_DATA=true

# Set to 'true' to enable Supabase integration
VITE_SUPABASE_ENABLED=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features during development
VITE_ENABLE_AUTHENTICATION=false
VITE_ENABLE_REAL_TIME_UPDATES=false
VITE_ENABLE_FILE_UPLOADS=false

# =============================================================================
# DEVELOPMENT SERVER
# =============================================================================
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
VITE_ENABLE_DEBUG_LOGGING=true
VITE_LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret for development (change in production)
VITE_JWT_SECRET=your_jwt_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service configuration
VITE_EMAIL_SERVICE=sendgrid
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here

# File storage service
VITE_STORAGE_SERVICE=supabase
VITE_STORAGE_BUCKET=equipment-dashboard

# =============================================================================
# NOTIFICATIONS
# =============================================================================
VITE_ENABLE_EMAIL_NOTIFICATIONS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable React DevTools
VITE_ENABLE_DEV_TOOLS=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# COMMENTS & INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to Git (it's already in .gitignore)
# 4. Share .env values securely with your team
# 5. Use different values for development/staging/production

# For team members:
# - Ask the project lead for the actual .env values
# - Or use the hardcoded data mode by setting VITE_USE_HARDCODED_DATA=true
